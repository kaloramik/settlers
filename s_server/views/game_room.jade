extends layout
block content
  link(rel='stylesheet', href="/stylesheets/game.css")
  script(type='text/javascript', src='/js/client/raphael-min.js');
  script(type='text/javascript', src='/js/client/hex.js');
  script(type='text/javascript', src='/js/client/vertex.js');
  script(type='text/javascript', src='/js/client/edge.js');
  script(type='text/javascript', src='/js/client/player.js');
  script(type='text/javascript', src='/js/client/board.js');
  script(type='text/javascript', src='/js/game.js');

  div(class="container-fluid fill", style="height:100%")
    div(class="row-fluid fill columns", style="height:100%")
      div(class="span2 fill", id='left_bar', style="height:100%;")
          div(class="row-fluid", style="height:50%")
            div(class="well", style="height:100%")
              legend Users
              ul(id="user-list")
                li(id="user1") test user
          div(class="row-fluid", style="height:50%")
            div(class="well", style="height:100%")
              legend Your Stuff
              ul(id="parts")
                li(id="part1") parts
      div(class="span7", id="game-container")
        div(class="row-fluid")
          div(class="well", id="game-well", style="height:600px")
          div(class="well", id="game-actions", style="float:right; margin-top:-190px; width:200px; height:130px;")
            input(class="btn", type="button", id="btn-roll", value="Roll")
            input(class="btn", type="button", id="btn-start", value="Start Game")
            br
            br
            input(class="btn", type="button", id="btn-end", value="End Turn")
            input(class="btn", type="button", id="btn-prob", value="Toggle Prob")
            br
            br
            input(class="btn", type="button", id="btn-buy-dev", value="Buy Dev Card")
        div(class="row-fluid")
          div(class="well", style="height:120px")
            legend Cards
            div(class="span1")
              div(class="well")
            div(class="span1")
              div(class="well")
        div(class="row-fluid")
          input(id="chat-text", style="width:90%;")
          input(type='button', id='chat-button', value='send')

      div(class="span3", id="chat-window")
        div(class="well", id="chat-well")
          legend Chatlog
          ul(id="chat-list")
            li(id="test-chat") chat window
        div(class="well", id="trade-window")
          legend Trade Window
